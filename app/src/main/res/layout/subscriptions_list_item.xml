<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="15dp"
    android:foreground="?android:selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="39dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/img"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:src="@drawable/student_pic"
                android:scaleType="centerCrop"
                />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/img_role"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_role_student"
                        android:layout_gravity="top|center_horizontal"
                        />

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jean-Yves Marchal"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_faculty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informatique"
                    android:textSize="12sp"
                    android:textColor="@color/darkGrey"
                    android:singleLine="true"
                    />

                <TextView
                    android:id="@+id/txt_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 3"
                    android:textSize="12sp"
                    android:textColor="@color/darkGrey"
                    />

            </LinearLayout>

            <ToggleButton
                android:id="@+id/tgbtn_subscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:minHeight="0dp"
                android:textOff="@string/subscribe"
                android:textOn="@string/unsubscribe"
                android:background="@drawable/button_subscriptions"
                android:textAllCaps="false"
                android:padding="5dp"
                android:textSize="11sp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>